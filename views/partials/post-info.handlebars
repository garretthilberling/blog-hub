<div class="flex items-center justify-center">
  <article class="bg-sky-50 rounded-lg shadow-xl m-8">
        <div class="bg-sky-700 text-sky-50 rounded-t-lg py-5 px-8 flex flex-row items-center justify-between flex-wrap">
            <div>
              {{user.username}} <span class="mx-4">|</span>  
              {{format_date created_at}}
            </div>
            <div>
            </div>
            <div>
              <span class="mx-4">|</span><a href="/post/{{id}}" class="hover:text-sky-300">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
        </div>
        
        <div class="p-3">
          <div class="flex justify-center font-semibold pb-1">{{title}}</div>
          <div class="flex justify-center">
              {{post_body}}
          </div>
        </div>
      </article>
</div>